{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:recommended",
    "group:allNonMajor",
    ":automergeMinor",
    ":automergePatch"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["golang"],
      "groupName": "go-toolchain",
      "separateMinorPatch": true,
      "separateMultipleMajor": true,
      "separateMultipleMinor": true
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "groupName": "go-version",
      "separateMinorPatch": true,
      "separateMultipleMajor": true,
      "separateMultipleMinor": true
    }
  ]
}
